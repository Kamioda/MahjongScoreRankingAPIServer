{
  "name": "mahjongscorerankingapi",
  "version": "1.0.0",
  "description": "Mahjong Score Ranking API server",
  "main": "src/server.ts",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "prettier": "prettier --write --end-of-line crlf .",
    "eslint": "eslint --cache --ext .js,.ts .",
    "eslint:fix": "eslint --cache --ext .js,.ts . --fix",
    "coverage": "c8 npm test",
    "ci": "run-p eslint coverage",
    "start": "node ./server.js",
    "test:spec": "ts-mocha -p ./tsconfig.json ./tests/spec/**/*.ts",
    "test:others": "ts-mocha -p ./tsconfig.json ./tests/others/**/*.ts",
    "test:database": "ts-mocha -p ./tsconfig.json ./tests/database/*.ts",
    "test": "ts-mocha -p ./tsconfig.json ./tests/**/*.ts",
    "init:test": "docker-compose up -d",
    "migrate:test": "npx prisma migrate dev",
    "wait:test": "node ./scripts/wait.js",
    "build": "tsc"
  },
  "author": "Kamioda",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@json-spec/core": "^0.1.12",
    "@prisma/client": "^5.1.1",
    "crypto": "^1.0.1",
    "express": "^4.18.2",
    "randomstring": "^1.3.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/assert": "^1.5.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.0",
    "@types/sinon": "^10.0.16",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "assert": "^2.0.0",
    "c8": "^8.0.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-node": "^11.1.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "prisma": "^5.1.1",
    "sinon": "^15.2.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.1.6"
  }
}
